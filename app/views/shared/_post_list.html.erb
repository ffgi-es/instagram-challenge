<% @posts.each do |post| %>
  <div>
    <p><%= post.user.username %> posted:</p>
    <% if post.image.attached? %>
      <img src="<%= url_for(post.image) %>" alt="<%= post.caption %>">
    <% end %>
    <p><%= post.created_at.strftime '%H:%M %d/%m/%y' %></p>
    <p><%= post.caption %></p>

    <%= link_to 'Comment', new_comment_path(post.id) %>

    <% @comments.select { |x| x.post_id == post.id }.each do |comment| %>
      <p>
      <%= comment.user.username %> says
      <%= comment.content %>
      </p>
    <% end %>
  </div>
<% end %>
